{
  "family": "ai-privacy-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::442205875234:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::442205875234:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "442205875234.dkr.ecr.ap-southeast-3.amazonaws.com/ai-privacy-backend:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "models-research",
          "containerPath": "/app/models_research"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-privacy-backend",
          "awslogs-region": "ap-southeast-3",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "frontend",
      "image": "442205875234.dkr.ecr.ap-southeast-3.amazonaws.com/ai-privacy-frontend:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "VITE_API_URL",
          "value": "http://localhost:8000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-privacy-frontend",
          "awslogs-region": "ap-southeast-3",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "backend",
          "condition": "HEALTHY"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "models-research",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0243fd013ca8a44c5",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "iam": "ENABLED"
        }
      }
    }
  ]
}
